<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/nav.ejs') %>   
    <main>
        <form class="product-form" action="/admin/product" method="POST">
            <div class="form-control <%= titleError ? 'has-error' : '' %>">
                <label for="title">Title</label>
                <input id="title" type="text" value="<%= product.title %>" name="title">
                <% if(titleError) { %>
                    <div class="form-control-error">
                        <%= titleError %>
                    </div>
                <% } %>
            </div>
            <div class="form-control <%= descriptionError ? 'has-error' : '' %>">
                <label for="description">Description</label>
                <textarea id="description" type="text" name="description"><%= product.description %></textarea>
                <% if(descriptionError) { %>
                    <div class="form-control-error">
                        <%= descriptionError %>
                    </div>
                <% } %>
            </div>
            <div class="form-control <%= costError ? 'has-error' : '' %>">
                <label for="cost">Cost</label>
                <input id="cost" type="text" value="<%= product.cost %>" name="cost">
                <% if(costError) { %>
                    <div class="form-control-error">
                        <%= costError %>
                    </div>
                <% } %>
            </div>
            
            <button type="submit">Add Product</button>
        </form>
    </main>
</body>
</html>