<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../includes/standard-head.ejs') %>
        <script>
            function deleteProduct(id) {
                console.log(JSON.stringify({id}))
                fetch('/admin/delete-product', {
                    method: "POST",
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({id: id})
                }).then((res) => {
                    location.reload();
                });
            }
        </script>
    </head>
    <body>
        <%- include('../includes/nav.ejs') %>
        <main>
            <% if(products.length > 0) { %>
                <h1>Product List</h1>
                <div class="grid">
                    <% for (let product of products) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%= product.title %></h1>
                            </header>
                            <% if(product.imageUrl) { %>
                                <div class="card__image">
                                    <img src="<%= product.imageUrl %>" alt="A Book">
                                </div>
                            <% } %>
                            <div class="card__content">
                                <h2 class="product__price"><%= product.cost %></h2>
                                <p class="product__description"><%= product.description %></p>
                            </div>
                            <div class="card__actions">
                                <a href="/admin/edit-product?id=<%= product.id %>" class="btn">Edit</a>
                                <button class="btn" onClick="deleteProduct(<%= product.id %>)">Delete</button>
                            </div>
                        </article>
                    <% } %>
                </div>
            <% } else { %>
                <h1>No Products Found!</h1>
            <% } %>    
        </main>
</body>
</html>