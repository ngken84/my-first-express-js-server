<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../includes/standard-head.ejs') %>
    </head>
    <body>
        <%- include('../includes/nav.ejs') %>

        <main class="centered">

            
            <h1><%= product.title %></h1>

            <% if(product.imageUrl) { %>
                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="A Book">
                </div>
            <% } %>
            <div>
                <h2>$<%= product.price %></h2>
                <p><%= product.description %></p>
            </div>
            <div>
                <%- include('../includes/product-add-cart-btn.ejs', {product}) %>
            </div>

        </main>
    </body>

</html>